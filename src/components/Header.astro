---
import Link from "./Link.astro";
import Sidebar from "./Sidebar.astro";
---

<header id="head" class="hidden lg:block relative stikcy transition top-0 z-50 bg-[var(--secondary)]/90 backdrop-blur-md shadow-md border-b border-[var(--accent)]">
  <div class="flex items-center justify-between max-w-6xl mx-auto px-6 h-16">
    <a href="/" class="text-2xl font-bold tracking-wide text-[var(--text)] hover:text-[var(--accent)] transition-colors">
      Arnav
    </a>

    <nav>
      <ul class="flex items-center gap-6 text-[var(--text)] font-medium">
        <Link title="Skills" url="#skills"/>
        <Link title="Projects" url="#projects"/>
        <Link title="Contact" url="#contact"/>
      </ul>
    </nav>
  </div>
</header>
<Sidebar client:load/>

<script>
import { gsap } from "gsap";

const Header = document.getElementById("head");
const myTimeline = gsap.timeline();

myTimeline
    .fromTo(Header,
        {opacity: -1},
        {opacity: 1, duration: 1.5, ease: "power2.in"}
    )
</script>