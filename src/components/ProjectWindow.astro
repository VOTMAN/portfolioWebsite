---
const { id, name, desc, github, url, image } = Astro.props;
---

<dialog id={id} class="p-6 bg-black/90 text-white rounded-lg shadow-lg m-auto text-center w-200">
  <a href={url} target="_blank"><img src={image} alt={name + " image"} class="hover:opacity-80 cursor-pointer transition"></a>
  <p class="text-2xl font-bold mb-4">{name}</p>
  <p class="mb-4">{desc}</p>
  <div class="flex gap-4 justify-center">
    <a href={github} target="_blank" class="underline">GitHub</a>
    <a href={url} target="_blank" class="underline">Live Demo</a>
  </div>
  <form method="dialog" class="mt-6">
    <button class="px-4 py-2 bg-[var(--accent)] text-black rounded cursor-pointer">Close</button>
  </form>
</dialog>