---
import "../styles/global.css"
const { title, url } = Astro.props;
---

<a href={url} class="inline-block">
  <button
    class="py-2 px-4 rounded-sm bg-[var(--primary)] text-[var(--text)] font-medium
           shadow-md transition-all duration-200 ease-in-out
           hover:bg-[var(--accent)] hover:shadow-lg active:scale-95"
  >
    {title}
  </button>
</a>
