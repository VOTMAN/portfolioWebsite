---
import projects from "../data/projects.json"
import ProjectWindow from "./ProjectWindow.astro";
---

<section
  id="projects"
  class="relative min-h-screen flex flex-col items-center py-20 overflow-hidden"
>
  <p class="text-4xl font-bold mb-12 text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-600 z-10">
    My Projects
  </p>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-6xl px-6 z-10">
    {projects.map((project, i) => {
      const dialogId = `projectWindow-${i}`;
      return (
        <div class="relative group">
          <!-- Project Card -->
          <button
            id={`proBtn-${i}`}
            class="w-full h-64 rounded-xl overflow-hidden shadow-lg border border-white/10 bg-black/50 backdrop-blur-md hover:shadow-cyan-500/40 transition relative"
          >
            <img
              src={project.image}
              alt={project.name}
              class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition"
            />
            <div class="absolute inset-0 flex items-center justify-center bg-black/60 opacity-0 group-hover:opacity-100 transition">
              <p class="text-xl font-bold text-cyan-300">{project.name}</p>
            </div>
          </button>

          <ProjectWindow
            id={dialogId}
            name={project.name}
            desc={project.desc}
            github={project.githubUrl}
            url={project.url}
            image={project.image}
          />
        </div>
      );
    })}
  </div>
</section>

<script>
  import { gsap } from "gsap";

  const pros = document.querySelectorAll("[id^='proBtn-']");

  pros.forEach((pro, i) => {
    const dialog = document.getElementById(`projectWindow-${i}`);

    // Open modal with animation
    pro.addEventListener("click", () => {
      if (dialog) {
        dialog.showModal();

        gsap.fromTo(
          dialog,
          { y: 100, opacity: 0, scale: 0.9 },
          { y: 0, opacity: 1, scale: 1, duration: 0.6, ease: "power3.out" }
        );
      }
    });

    // Card hover effect
    pro.addEventListener("mouseenter", () => {
      gsap.to(pro, {
        scale: 1.05,
        duration: 0.3,
        ease: "power2.out"
      });
    });

    pro.addEventListener("mouseleave", () => {
      gsap.to(pro, {
        scale: 1,
        duration: 0.3,
        ease: "power2.inOut"
      });
    });
  });
</script>
